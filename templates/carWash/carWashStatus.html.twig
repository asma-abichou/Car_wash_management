{% extends 'base.html.twig' %}

{% block title %}
    <title>Car Wash Status</title>
{% endblock %}

{% block body %}
    <body class="hold-transition sidebar-mini">
    <div class="wrapper">
        {% include 'navBar.html.twig' %}
        {% include 'sideBar.html.twig' %}
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <form method="post" action="">
                                <div class="form-group">
                                    <label for="numCarsBeingWashed" class="form-label">Nombre de voitures lavées:</label>
                                    <input type="number" id="numCarsBeingWashed" name="numCarsBeingWashed" value="#"  class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="numCarsCleaned" class="form-label">Nombre de voitures nettoyées:</label>
                                    <input type="number" id="numCarsCleaned" name="numCarsCleaned" value="3" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="estimatedTime" class="form-label">Temps restant estimé :</label>
                                    <input type="text" id="estimatedTime" value="00:00:00"  class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">Mettre à jour Statut de lavage de voiture</button>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    </body>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
    <title>Car Wash Status</title>
{% endblock %}

{% block body %}
    <body class="hold-transition sidebar-mini">
    <div class="wrapper">
        {% include 'navBar.html.twig' %}
        {% include 'sideBar.html.twig' %}
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <h1 class="text-center mb-4">Car Wash Status</h1>
                            <div class="card">
                                <div class="card-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="numCarsBeingWashed" class="form-label">Number of Cars Being Washed:</label>
                                            <input type="text" id="numCarsBeingWashed" value="#" readonly class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="estimatedTime" class="form-label">Estimated Time Remaining:</label>
                                            <input type="text" id="estimatedTime" value="00:00:00" readonly class="form-control">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    </body>
{% endblock %}
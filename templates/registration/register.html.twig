{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
<body class="hold-transition register-page">
<div class="register-box">
    <div class="register-logo">
        <a href="{{ path('home_page') }}"><b>Admin</b>Register</a>
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new Owner</p>

            <form action="{{ path('home_page') }}" method="post">
                {{ form_errors(registrationForm) }}
                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.fullName, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Full name'
                        }
                    }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Email'
                        }
                    }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Password'
                        }
                    }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            {{ form_label(registrationForm.agreeTerms, 'I agree to the') }}
                            <a href="#">terms</a>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </div>
            </form>
            <a href="#" class="text-center">I already have a membership</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
</body>
{% endblock %}
